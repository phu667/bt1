#include <stdio.h>
#include <conio.h>

int main() {
    int d, m, y; // ngày, tháng, năm
    printf("Nhap ngay, thang, nam: ");
    scanf("%d%d%d", &d, &m, &y);

    int hopLe = 1; // giả sử hợp lệ

    if (y <= 0) {
        hopLe = 0; // năm không hợp lệ
    } else if (m < 1 || m > 12) {
        hopLe = 0; // tháng không hợp lệ
    } else {
        int maxDay;
        switch (m) {
            case 1: case 3: case 5: case 7: case 8: case 10: case 12:
                maxDay = 31; break;
            case 4: case 6: case 9: case 11:
                maxDay = 30; break;
            case 2:
                // kiểm tra năm nhuận
                if ((y % 400 == 0) || (y % 4 == 0 && y % 100 != 0))
                    maxDay = 29;
                else
                    maxDay = 28;
                break;
        }
        if (d < 1 || d > maxDay)
            hopLe = 0;
    }

    if (hopLe)
        printf("Ngay %d/%d/%d hop le.\n", d, m, y);
    else
        printf("Ngay %d/%d/%d khong hop le.\n", d, m, y);

    getch(); // dừng màn hình
    return 0;
}
