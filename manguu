#include <iostream>
#include <random>
#define MAX 100
using namespace std;

void nhapmang(int a[], int &n);
void xuatmang(int a[], int n);
void chanle(int a[], int n);
void tangdan(int a[], int n);

int main(){
	int a[MAX];
	int n;
	nhapmang(a, n);
	cout << "mang vua nhap";
	xuatmang(a, n);
	chanle(a, n);
	cout << "mang sau xep";
	tangdan(a, n);
	system("pause");
}

void nhapmang(int a[], int &n){
	cout << "nhap so phan tu";
	cin >> n;
	for (int i = 0; i < n; i++){
		a[i] = 1 + rand() % (n);
	}
}

void xuatmang(int a[], int n){
	for (int i = 0; i < n; i++){
		cout << a[i]<<" ";
	}
	cout << endl;
}

void chanle(int a[], int n){
	for (int i = 0; i < n; i++){
		if (a[i] % 2 == 0)
			cout << a[i] << " " << endl;
		cout << "cac so chan";
	}
	for (int i = 0; i < n; i++){
		if (a[i] % 2 != 0)
			cout << a[i] << " " << endl;
				cout << "cac so le";
	}
	cout << endl;
}

void tangdan(int a[], int n){
	int temp ,j;
	for (int i = 0; i < n; i++){
		for (int j = i + 1; j < n; j++){
			if (a[i]>a[j]){
				int temp = a[i];
				a[i] = a[j];
				a[j] = temp;
			}
		}
	}
	for (int i = 0; i < n; i++)
		cout << a[i] << " " << endl;
}
